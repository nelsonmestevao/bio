---
import Avatar from "../components/Avatar.astro";
import GradienteLine from "../components/GradienteLine.astro";

import "../styles/global.css";

export interface Props {
  title?: string;
  lang?: string;
}

const { title = "Hello", lang = "en" } =
  (Astro.props.frontmatter as Props) || (Astro.props as Props);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/gif" href="/imgs/wave.gif" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} • Nelson Estevão</title>
    <script defer src="https://umami-production.marmela.dev/script.js" data-website-id="4e8eae37-5786-43c3-80ba-853e75475074"></script>
  </head>

  <body>
    <GradienteLine />
    <div class="container">
      <Avatar />

      <div class="content">
        <slot />
      </div>
    </div>
    <style>
      html,
      body {
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen,
          Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;
        line-height: 28px;
        margin: 0;
        padding: 0;
        background-color: var(--background-color);
        color: var(--main-text-color);
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 80px;
      }

      .content {
        margin: 0 20px;
        max-width: 768px;
        -webkit-animation: slide-in-fwd-bottom 1s
          cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
        animation: slide-in-fwd-bottom 1s cubic-bezier(0.25, 0.46, 0.45, 0.94)
          both;
      }

      /* ----------------------------------------------
        * Generated by Animista
        * Licensed under FreeBSD License.
        * See http://animista.net/license for more info.
        * w: http://animista.net, t: @cssanimista
        * ---------------------------------------------- */

      /* ----------------------------------------
       * animation slide-in-fwd-bottom
       * ---------------------------------------- */

      @-webkit-keyframes slide-in-fwd-bottom {
        0% {
          -webkit-transform: translateZ(-1400px) translateY(800px);
          transform: translateZ(-1400px) translateY(800px);
          opacity: 0;
        }
        100% {
          -webkit-transform: translateZ(0) translateY(0);
          transform: translateZ(0) translateY(0);
          opacity: 1;
        }
      }
      @keyframes slide-in-fwd-bottom {
        0% {
          -webkit-transform: translateZ(-1400px) translateY(800px);
          transform: translateZ(-1400px) translateY(800px);
          opacity: 0;
        }
        100% {
          -webkit-transform: translateZ(0) translateY(0);
          transform: translateZ(0) translateY(0);
          opacity: 1;
        }
      }

      @media (max-width: 1024px) {
        .container {
          display: block;
        }
      }

      @media (max-width: 768px) {
        .container {
          padding: 40px;
        }
      }

      @media (max-width: 640px) {
        .container {
          padding: 10px 15px;
        }
      }

      :global(p) {
        font-size: 16px;
      }

      :global(a) {
        color: var(--secondary-text-color);
        text-decoration: none;
        text-decoration: solid underline;
      }

      :global(a:hover, a:focus) {
        color: var(--main-text-color);
        text-decoration: solid underline;
      }

      :global(strong) {
        color: var(--accent-color);
        font-weight: bold;
      }

      :global(strong a) {
        color: var(--accent-color);
        text-decoration: solid underline;
        -webkit-text-decoration: solid underline;
        -webkit-text-decoration-skip: ink;
        text-decoration-skip: ink;
      }

      :global(strong a:hover, strong a:focus) {
        color: var(--accent-color);
      }
    </style>
  </body>
</html>
